{
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
        "type": "vcs",
        "url": "https://github.com/imarc/craft-regex-field.git"
    }
  ],
  "require": {
    "craftcms/ckeditor": "^4.1.0",
    "craftcms/cms": "^5.0.0",
    "craftcms/contact-form": "^3.1.0",
    "craftcms/contact-form-honeypot": "^2.1.0",
    "craftcms/element-api": "^4.1.0",
    "craftcms/feed-me": "^6.3.0",
    "imarc/craft-entry-toc": "^1.0",
    "imarc/craft-regex-field": "dev-master",
    "nystudio107/craft-retour": "^5.0.2",
    "nystudio107/craft-seomatic": "^5.1.1",
    "nystudio107/craft-vite": "^5.0.1",
    "verbb/expanded-singles": "^3.0.0",
    "verbb/field-manager": "4.0.2",
    "vlucas/phpdotenv": "^5.4.0"
  },
  "require-dev": {
    "craftcms/generator": "^2.0.0",
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "yiisoft/yii2-composer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example.dev', '.env');\""
    ]
  }
}
