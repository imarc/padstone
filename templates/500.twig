{% import "/_macros" as macros %}
{% extends "_layouts/main" %}

{% set entry = craft.entries.section('errorPage').one %}

{% block content %}
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3">{{ entry.headline }}</h1>
            <p class="lead">{{ entry.subheadline }}</p>
        </div>
    </div>

    {{ macros.renderAllBlocks(entry.designedContent) }}

{% endblock %}
