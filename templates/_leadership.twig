{% import "/_macros" as macros %}
{% set section = 'about' %}
{% extends "_layouts/main" %}
{% block content %}
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3">{{ entry.headline }}</h1>
            <p class="lead">{{ entry.subheadline }}</p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            {% for person in craft.entries.section('people').all() %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title mb-0">{{ person.link }}</h4>
                            <p class="text-muted mb-3">{{ person.personJobTitle }}</p>
                            <div class="card-text">{{ person.personAbstract }}</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
