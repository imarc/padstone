{% import "/_macros" as macros %}
{% set section = 'news' %}
{% extends "_layouts/main" %}
{% block content %}
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3">{{ entry.headline }}</h1>
            <p class="lead">{{ entry.subheadline }}</p>
        </div>
    </div>

    <div class="articles">
        {% for article in craft.entries.section('news').all() %}
            <div class="my-5">
                <div class="container mb-0">
                    <h2>{{ article.link }}</h2>
                    <p class="text-muted">{{ article.newsDate|date("F jS, Y") }}</p>

                    {{ article.newsAbstract }}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
