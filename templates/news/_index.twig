{% import "/_macros" as macros %}
{% set section = 'newsEventsPage' %}
{% extends "_layouts/main" %}
{% block content %}
    {% include '_partials/hero' with {
        headline: entry.headline,
        subheadline: entry.subheadline
    } %}

    <div class="articles">
        {% for article in craft.entries.section('news').all() %}
            <div class="my-5">
                <div class="container mb-0">
                    <h2>{{ article.link }}</h2>
                    <p class="text-muted">{{ article.newsDate|date("F jS, Y") }}</p>

                    {{ article.newsAbstract }}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
