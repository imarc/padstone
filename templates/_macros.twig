{% macro renderBlock(block, blockLoop, showSeparator) %}
    {% import _self as macros %}
    {% include '/_blocks/' ~ block.type %}
{% endmacro %}

{% macro renderAllBlocks(field, withSeparators) %}
    {% import _self as macros %}

    {% for block in field.all() %}
        {{ macros.renderBlock(block, loop, withSeparators and not loop.last) }}
    {% endfor %}
{% endmacro %}
