{% import "/_macros" as macros %}
{% set section = 'about' %}
{% extends "_layouts/main" %}
{% block content %}
    {% include '_partials/hero' with {
        headline: entry.title,
        subheadline: entry.personJobTitle
    } %}

    <div class="container">
        {{ entry.personBio }}
    </div>

    <div class="text-center my-5">
        {% set index = craft.entries.section('leadershipPage').one %}
        <a class="btn btn-outline-secondary" href="{{ index.url }}">Return to {{ index.title }}</a>
    </div>

{% endblock %}
