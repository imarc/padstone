<div class="layer pt-5">
    <div class="container">
        {% if block.sectionTitle %}
            <h2>
                {{ block.sectionTitle }}
            </h2>
        {% endif %}

        <blockquote class="blockquote text-center">
            {{ block.quote }}
            <footer class="blockquote-footer">
                {{ block.person }}, {{ block.jobTitle }}
            </footer>
        </blockquote>

        {% if not blockLoop.last %}
            <hr class="mt-5">
        {% endif %}
    </div>
</div>
