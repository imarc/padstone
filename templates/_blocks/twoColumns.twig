<div class="layer pt-5">
    <div class="container">

        {% if block.sectionTitle %}
            <h2>
                {{ block.sectionTitle }}
            </h2>
        {% endif %}

        <div class="row">
            <div class="col-md-6">
                {{ block.leftContent }}
            </div>
            <div class="col-md-6">
                {{ block.rightContent }}
            </div>
        </div>

        {% if not blockLoop.last %}
            <hr class="mt-5">
        {% endif %}
    </div>
</div>
