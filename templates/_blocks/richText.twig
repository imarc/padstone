<div class="layer rich-text {% if not blockLoop.first %}pt-5{% endif %}">
    <div class="container">
        {% if block.sectionTitle %}
            <h2>
                {{ block.sectionTitle }}
            </h2>
        {% endif %}

        {{ block.blockContent }}

        {% if showSeparator %}
            <hr class="mt-5">
        {% endif %}
    </div>
</div>
