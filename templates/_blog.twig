{% import "/_macros" as macros %}
{% set section = 'blog' %}
{% extends "_layouts/main" %}
{% block content %}
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3">{{ entry.headline }}</h1>
            <p class="lead">{{ entry.subheadline }}</p>
        </div>
    </div>

    <div class="articles">
        {% for article in craft.entries.section('blog').all() %}
            <article class="my-5">
                <div class="container mb-0">
                    <h2>{{ article.title }}</h2>
                    <p class="text-muted">{{ article.blogDate|date("F jS, Y") }}</p>
                </div>

                {{ macros.renderAllBlocks(article.structuredContent) }}
            </article>
        {% endfor %}
    </div>

{% endblock %}
