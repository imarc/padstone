{% if block.sectionImage|length %}
    <div class="card__background" style="opacity: .3; background-image: url({{ block.sectionImage.one.url }})"></div>
{% endif %}
<h4 class="card__heading">{{ block.sectionLabel }}</h4>
<div class="card__content">
    {{ block.sectionContent }}
</div>
<div class="card__actions">
    <a href="{{ block.sectionRelatedEntry.one.url }}" class="card__action button -primary">
        {{ block.sectionCTALabel }}
    </a>
</div>
