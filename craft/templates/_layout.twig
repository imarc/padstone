<!DOCTYPE html>
{% set body_id = path_id(0, 3) ?: 'home' %}
{% if entry is defined %}
    {% if title is not defined %}
        {% if entry.metaTitle %}
            {% set title = entry.metaTitle %}
        {% else %}
            {% set title = entry.title %}
        {% endif %}
        {% set metaDescription = entry.metaDescription %}
        {% set ogImage = entry.ogImage %}
        {% set metaTags = entry.metaTags %}
        {% set footerJS = entry.footerJS %}
    {% endif %}

    {% set metaDescription = entry.metaDescription %}

    {% if entry.ogImage.total() %}
        {% set ogImage = entry.ogImage.first().getUrl('ogImage') %}
    {% else %}
        {% set ogImage = false %}
    {% endif %}

    {% set metaTags = entry.metaTags %}
    {% set footerJS = entry.footerJS %}
{% endif %}

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% if title is defined %}{{ title }}{% endif %}</title>
        {% if metaDescription is defined and metaDescription != "" %}
            <meta name="description" content="{{ metaDescription }}" />
        {% endif %}
        {% if ogImage is defined and ogImage != "" %}
            <meta property="og:image" content="{{ ogImage }}" />
        {% endif %}
        <meta name="web_author" content="Imarc, A Digital Agency | Boston + Silicon Valley | more info at imarc.com" />
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="{{ craft.sass.link("/css/styles.scss") }}" media="all" />
        {% if metaTags is defined %}
            {{ metaTags | raw }}
        {% endif %}
    </head>
    <body class="{{ path_classes() }}" id="{{ body_id }}">
        <header class="primary sticky">
            {% if craft.adminbar is defined %}
                {% set config = {
                    entry: entry,
                    sticky: false
                } %}
                {{ craft.adminbar.bar(config) }}
            {% endif %}
            <div class="container">
                <div class="header-content">
                    <div class="branding">
                        <a href="/">
